<div class="bendera-item">
    [[+link_external:notempty=`
        <a href="[[+link_external]]" target="_blank" rel="noopener" title="[[+title]]">
            <img src="[[+image]]" alt="[[+title]]" class="img-fluid"/>
        </a>
    `:isempty=`
        <a href="[[~[[+link_internal]]]]" title="[[+title]]">
            <img src="[[+image]]" alt="[[+title]]" class="img-fluid"/>
        </a>
    `]]
</div>